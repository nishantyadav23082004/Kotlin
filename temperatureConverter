fun main(){
    print("Enter the temperature(in Celsius): ")
    var num1 = readln().toInt()
    print("Enter the temperature(in Fahrenheit): ")
    var num2 = readln().toInt()

    toFahrenheit(num1)  // Calling a function, Converting Celsius to Fahrenheit

    toCelsius(num2)  // Calling a function, Converting Fahrenheit to Celsius
}
fun toCelsius(a:Int){  // Defining a function
    val tempC = (a - 32) / 1.8
    println("Temperature is "+ tempC +" degree Celsius")
}
fun toFahrenheit(b:Int){  // Defining a function
    val tempF = ((b * 1.8) + 32)
    println("Temperature is "+ tempF +" degree Fahrenheit")
}
